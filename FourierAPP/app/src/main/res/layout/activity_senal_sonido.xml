<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/captura"
    tools:context=".SenalSonido">

    <Button
        android:id="@+id/gurdarSenalSonido"
        android:layout_width="137dp"
        android:layout_height="47dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="Guardar"
        android:textColor="#0E0E0E"
        android:textStyle="bold|italic"
        app:backgroundTint="#DFDBDB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.814"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/descartarSenalSonido"
        android:layout_width="147dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:text="Dercartar"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        app:backgroundTint="#E1DCDC"
        app:iconTint="#DFDBDB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.814" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="334dp"
        android:layout_height="284dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toTopOf="@+id/gurdarSenalSonido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/images" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginLeft="176dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="37dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/gurdarSenalSonido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/presence_audio_busy" />

</androidx.constraintlayout.widget.ConstraintLayout>